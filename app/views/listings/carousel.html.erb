<a href = "/listings/<%= @listing.id %>">Back</a>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">

    <div class="carousel-item active">
      <img class="d-block w-50" src=<%= @listing.pictures[0].url %>  height ="300px" alt="First slide">
    </div>
    <% count = 0 %>
    <% while count <@listing.pictures.length-1 do %>         
      <div class="carousel-item">
      <img class="d-block w-50" src=<%= @listing.pictures[count+1].url %>  height ="300px" alt="Second slide">
    </div>
    <% count+=1%>
    <% end %>
   
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

