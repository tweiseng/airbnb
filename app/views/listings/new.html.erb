<%= form_for @listing do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :property_type %>
    <%= f.text_field :property_type %>
  </div>

  <div class="field">
    <%= f.label :room_number %>
    <%= f.number_field :number_rooms %>
  </div>

  <div class="field">
    <%= f.label :bed_number %>
    <%= f.number_field :number_beds %>
  </div>

  <div class="field">
    <%= f.label :guest_number %>
    <%= f.number_field :number_guests %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>


  <div class="field">
    <%= f.label :pictures %>
    <%= f.file_field :pictures, multiple: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>